  Button
    id: btnCancel
    text: "Cancel"
    size: 80 25
    anchors.horizontalCenter: parent.horizontalCenter
    anchors.verticalCenter: parent.bottom
    margin-bottom: 10
    color: #FFFFFF
    @onClick: hideChoiceWindow()